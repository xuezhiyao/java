import java.util.Scanner;
public class yanghuisanjiao{ 
	 private char yanghuiss(char a[ij])
	 {for(i=0;i>n-j&&i<n;i++)
	 {for(j=0;j<n;j++)
	 {
		System.out.printfln(" "); 
		 }
	 }
	 
	 
	 for(i=0;i==n-j|i==2*n-j&&i<n;i++)
	 {for(j=0;j<n;j++){
		 System.out.printfln("1");	 
	 }
	 }
	  } 
	 
	 
	 public static void main(String[] args) {
		 Scanner sc = new Scanner(System.in);
		 int n = sc.nextInt();
	  System.out.println("输出数列为:");
	  yanghuisanjiao f = new yanghuisanjiao();
	  for (int i = 0; i <= n; i++)
	  {for (int j = 0; j <= n; j++)
	  {
		  
	  
	   System.out.print(f.yanghuisanjiao(a[ij]) + "\t");
	   }
	  }
	 }	 
}
	 


